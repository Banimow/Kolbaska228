extends ../layout/default
block nazva
  title Новий магазин
block content

    
    main.expanded.row#main
        a.expanded.button.create-post-btn(type="button", href="/b_new_permarcet?add=true", target="_blank") Додати новий магазин
           
        .medium-9.large-10.column
            if (Marcets)
                .title-row.expanded.row
                    .small-3.medium-3.large-3.column Назва фірми
                    .small-2.medium-2.large-2.column Населений пункт
                    .small-3.medium-3.large-3.column Адреса
                    .small-2.medium-2.large-2.column Будинок
                    .small-2.medium-2.large-2.column Максимальний % знижки

                hr
                - var i = 1;
                .Mercet-section
                    each Marcet in Marcets
                        +b_magazinfo(Marcet, i)
                        - i++
        .medium-3.large-2.column
            if (Marcets)
                +buildingsFilter()