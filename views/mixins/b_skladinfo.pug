    .small-2.medium-2.large-2.column= Tovar.nvir || "*"
    .small-1.medium-1.large-1.column= Tovar.npos || "*"
    .small-1.medium-1.large-1.column= Tovar.ncolor || "*"
    .small-1.medium-1.large-1.column= Tovar.nlitr || "*"
    .small-1.medium-1.large-1.column= Tovar.nzak || "*"
    .small-1.medium-1.large-1.column= Tovar.nopt || "*"
    .small-1.medium-1.large-1.column= Tovar.nrozd || "*"
